@model  List<AgendaMVC.Models.ViewModel.ContactoViewModel>

@{
    ViewBag.Title = "Agenda - Detalle De Contactos.";
}

<h2>Agenda - Detalle</h2>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nombre</td>
            <td>Apellido</td>
            <td>Telefono</td>
            <td>Mail</td>
            <td>Eliminar</td>
            <td>Editar</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.NombreContacto</td>
            <td>@item.ApellidoContacto</td>
            <td>@item.TelefonoContacto</td>
            <td>@item.MailContacto</td>
            <td>@Html.ActionLink("Eliminar", "Eliminar", "Agenda", new {Id=item.Id }, new { @class = "navbar-brand" })</td>
            <td>@Html.ActionLink("Editar", "Editar", "Agenda",
               new {Id=item.Id, NombreContacto=item.NombreContacto, ApellidoContacto=item.ApellidoContacto,
               TelefonoContacto=item.TelefonoContacto, MailContacto=item.MailContacto},
               new { @class = "navbar-brand" })</td>
        </tr>
        }
    </tbody>
</table>